.about-section
  // background-image: url('../images/about-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color $color-white

  &__container
    position relative
    z-index 1
    padding: 20px 0 0
    +above($breakpoints.sm)
      padding 50px 0
    +above($breakpoints.md)
      padding 80px 0
    +above($breakpoints.xxl)
      padding 112px 0 123px

  &__title
    padding-bottom 15px
    text-transform: uppercase
    text-align: center
    +above($breakpoints.sm)
      padding-bottom 25px
    +above($breakpoints.md)
      padding-bottom 35px
    +above($breakpoints.xxl)
      padding-bottom 59px

  &__text
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      align-items: flex-start
      margin-left 182px
      gap: 3px
    +above($breakpoints.md)
      margin-left 258px
      gap: 10px
    +above($breakpoints.xxl)
      margin-left 301px
      gap: 15px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    margin-top 15px
    border-radius: 10px
    background-image: url('../images/about-section-form-bg.jpg')
    background-repeat: no-repeat
    background-position: center
    background-size: cover
    background-color $color-white
    padding 15px 10px
    +above($breakpoints.sm)
      padding 12px 12px 16px 12px
      border-radius: 15px
      margin-top 30px
      flex-direction: row
    +above($breakpoints.md)
      padding 16px 16px 20px 16px
      border-radius: 20px
      margin-top 70px
      gap: 8px
    +above($breakpoints.xxl)
      padding 22px 22px 24px 22px
      margin-top 93px
      gap: 12px
      height: 183px
    input
      width 280px !important
      +above($breakpoints.sm)
        width 207px !important
      +above($breakpoints.md)
        width 288px !important
      +above($breakpoints.xxl)
        width 371px !important
    button
      width 280px !important
      +above($breakpoints.sm)
        width 100% !important

  &__form-column
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      width 420px
      flex-direction: row
      flex-wrap: wrap
      gap: 7px 5px
    +above($breakpoints.md)
      width 584px
      gap: 10px 8px
    +above($breakpoints.xxl)
      width 754px
      gap: 17px 11px

  &__img
    width 280px
    height: auto
    margin: -6px 0 0px -5px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 270px;
      top: 94px;
      left: -62px;
    +above($breakpoints.md)
      width: 365px;
      top: 142px;
      left: -85px;
    +above($breakpoints.xxl)
      width 440px
      top: 197px
      left: -105px
