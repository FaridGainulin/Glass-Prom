.steps-section
  // background-image: url('../images/steps-section-bg.jpg')
  // background-repeat: no-repeat
  // background-size: cover
  // background-position: center
  background-color $color-white
  overflow hidden

  &__container
    position relative
    z-index 1
    padding 0 0 20px
    +above($breakpoints.sm)
      padding 50px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 117px 0 119px

  &__icon-1
    position: absolute
    z-index -1
    width: 30px;
    height: 27px;
    top: 52px;
    left: -33px;
    +above($breakpoints.sm)
      width: 60px;
      height: 54px;
      top: 73px;
      left: -78px;
    +above($breakpoints.md)
      width: 80px;
      height: 71px;
      top: 100px;
      left: -142px;
    +above($breakpoints.xxl)
      width: 100px;
      height: 88px;
      top: 148px;
      left: -224px;

  &__icon-2
    position: absolute
    z-index -1
    width: 50px;
    height: 45px;
    bottom: 10px;
    right: -61px;
    +above($breakpoints.sm)
      width: 80px;
      height: 72px;
      bottom: 72px;
      right: -120px;
    +above($breakpoints.md)
      width: 120px;
      height: 104px;
      bottom: 82px;
      right: -158px;
    +above($breakpoints.xxl)
      width: 150px;
      height: 132px;
      bottom: 133px;
      right: -265px;

  &__icon-line
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      z-index -1
      width: 1190px;
      height: 249px;
      top: 180px;
      left: -231px;
    +above($breakpoints.md)
      width: 1567px;
      height: 329px;
      top: 250px;
      left: -301px;
    +above($breakpoints.xxl)
      width: 1920px;
      height: 402px;
      top: 351px;
      left: -370px;

  &__title
    text-transform: uppercase
    text-align: center
    padding 0 0 15px 0
    +above($breakpoints.sm)
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 50px 0
    +above($breakpoints.xxl)
      padding 0 0 74px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 10px 10px
    +above($breakpoints.md)
      gap: 22px 20px;
    +above($breakpoints.xxl)
      gap: 24px 20px

  &__card
    width 280px !important
    display: flex
    flex-direction: column
    gap: 5px
    +above($breakpoints.sm)
      width: 235px !important;
      gap: 8px
    +above($breakpoints.md)
      gap: 11px
      width: 308px !important;
    +above($breakpoints.xxl)
      width 380px !important
      height: 172px

  &__card-title
    color: $color-blue
    text-align: center
    +above($breakpoints.sm)
      text-align: end

  &__card-text
    width 100%
    height: 67px
    background-color #AAD2F0
    border-radius: 10px
    padding 10px 5px
    text-align: center
    +above($breakpoints.sm)
      height: 75px
      text-align: start
      border-radius: 15px
      padding 10px 5px 10px 15px
    +above($breakpoints.md)
      height: 95px
      border-radius: 20px
      padding 14px 5px 14px 20px
    +above($breakpoints.xxl)
      height: 122px
      padding 18px 5px 17px 26px

  &__bottom
    position relative
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    text-align: center
    text-transform: uppercase
    +above($breakpoints.sm)
      flex-direction: row
      justify-content flex-end
      text-align: end
      gap: 10px
      margin-top 40px
    +above($breakpoints.md)
      margin-top 60px
      gap: 20px
    +above($breakpoints.xxl)
      margin-top 84px

  &__bottom-img
    position: absolute
    width: 167px;
    height: auto;
    bottom: -34px;
    right: -49px;
    +above($breakpoints.sm)
      width: 420px;
      bottom: -92px;
      right: -110px;
    +above($breakpoints.md)
      width: 560px;
      bottom: -123px;
      right: -120px;
    +above($breakpoints.xxl)
      width: 722px;
      bottom: -159px;
      right: -150px;

  &__bottom-right
    width 100%
    background-image: url('../images/steps-section-bottom-bg.jpg')
    background-repeat: no-repeat
    background-size: cover
    background-position: center
    background-color #83BDE8
    padding 15px 10px
    border-radius: 10px
    +above($breakpoints.sm)
      width 480px
      border-radius: 15px
      padding 30px 10px 30px 25px
    +above($breakpoints.md)
      width 636px
      border-radius: 20px
      padding 35px 10px 35px 30px
    +above($breakpoints.xxl)
      width 780px
      height: 168px
      padding 46px 10px 42px 36px

  &__btn
    width 220px !important
    height: 50px !important
    text-align: center
    +above($breakpoints.sm)
      width 250px !important
      height: 60px !important
    +above($breakpoints.md)
      width 300px !important
      height: 70px !important
    +above($breakpoints.xxl)
      width 340px !important
      height: 80px !important
